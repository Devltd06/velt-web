{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "bundler",
    "customConditions": ["react-native"]
  },
  "exclude": ["node_modules", "build", "dist", "supabase/functions"] ,
  "include": ["declarations.d.ts", "app", "src", "lib", "components", "**/*.ts", "**/*.tsx"]
}


// This configuration file extends the Expo TypeScript base configuration
// and sets up the TypeScript compiler options for a React Native project.
// It specifies the module system, target version, JSX handling, and strict type checking.
// It also configures the base URL and path mappings for easier imports.
